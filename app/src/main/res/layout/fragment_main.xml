<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/fragment_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/fragment_main_aircon_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="エアコンON" />

    <Button
        android:id="@+id/fragment_main_aircon_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="エアコンOFF" />

    <Button
        android:id="@+id/fragment_main_fan_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="扇風機スイッチ" />

    <Button
        android:id="@+id/fragment_main_fan_swing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="扇風機首振り" />

    <Button
        android:id="@+id/fragment_main_fan_power_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="扇風機風力UP" />

    <Button
        android:id="@+id/fragment_main_reibou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="冷房一連押し" />


    <GridView
        android:id="@+id/fragment_main_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="120dp"
        android:gravity="center"
        android:horizontalSpacing="12dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="12dp" />

</LinearLayout>
